<!-- breadcrumb start -->
<div class="ui big breadcrumb">
  <a class="section">Home</a>
  <i class="right chevron icon divider"></i>
  <div class="active section">Students</div>
</div>
<!-- breadcrumb end -->
<!-- action buttons -->
<span>
  <br>
  <br>
  <a href="/students/create" class="card-button">Add Entry</a>
  <a href="student-form.html" class="card-button">Reporting</a>
  <a href="attendance.html" class="card-button">Attendance</a>
  <a href="student-form.html" class="card-button">Illustrates</a>
  <div style="display: flex;">
    <h3 class="heading-tertiary" style="margin-right: 1rem; margin-top: .5rem;">All</h3>
    <div class="ui search">
      <div class="ui icon input">
        <input class="prompt" placeholder="Find students..." type="text">
        <i class="search icon"></i>
      </div>
      <div class="results"></div>
    </div>
  </div>
</span>
<!-- action buttons end -->
<!-- table start -->
<table class="ui table">
  <thead>
    <tr>
      <th>Student</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Gender</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each students}}
    <tr>
      <td>
        <h4 class="ui image header">
          <img src="img/avatars/avatar2.png" class="ui mini rounded image">
          <div class="content">
            {{this.FirstName}} {{this.LastName}}
            <div class="sub header">00{{this.Id}}
            </div>
          </div>
        </h4>
      </td>
      <td>{{this.Phone}}</td>
      <td>{{this.DateOfBirth}}</td>
      <td>{{this.Gender}}</td>
      <td class="right aligned">
        <a href="student-profile.html" class="ui button">View</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <th colspan="5">
        <div class="ui right floated pagination menu">
          <a class="icon item">
            <i class="left chevron icon"></i>
          </a>
          <a class="item active">1</a>
          <a class="item">2</a>
          <a class="item">3</a>
          <a class="item">4</a>
          <a class="icon item">
            <i class="right chevron icon"></i>
          </a>
        </div>
      </th>
    </tr>
  </tfoot>
</table>
<!-- table end -->
<!-- today start -->
<div style="margin: 4rem 0;">
  <h3 class="heading-tertiary">Recent Activity</h3>
  <h5 class="ui top attached header green">
    Today
  </h5>
  <div class="ui attached segment">
    <a class="ui image label">
      <img src="img/avatars/avatar6.png"> Jon Snow
    </a>
    <div class="ui message">
      3 New students are successfully added 2h ago
    </div>
    <div class="ui message">
      4 Students are successfully removed 5h ago
    </div>
  </div>
  <h5 class="ui attached header blue">
    This Week
  </h5>
  <div class="ui attached segment">
    <div class="ui message">
      No activities are recorded this week
    </div>
  </div>
</div>
<!-- today end -->